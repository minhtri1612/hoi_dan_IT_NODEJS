<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" 
        crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" 
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" 
        crossorigin="anonymous"></script>

</head>
<body>
    <div style="margin: 25px;">
        <div style="display:flex; justify-content: space-between; align-items: center;">
            <h1>List Users: 
            </h1>
            <div>
                <a href="/create-user" class="btn btn-primary">Create a new user</a>
            </div>
        </div>
    </div>
    <hr />
    <div> 
        <table class="table table-hover table-bordered">
            <thread>
                <!-- ID column intentionally hidden to avoid showing internal ids to users -->
                <th style="display:none;">Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Action</th>
            </thread>
            <tbody>
                <% users.forEach(function (user) { %>
                <tr>
                    <td style="display:none;"><%= user.id %></td>
                    <td><%= user.fullName %></td>
                    <td><%= user.username %></td>
                    <td><%= user.address %></td>

                    <td>
                        <div style="display: flex; gap: 10px; align-items:center;">
                            <!-- use a simple link for GET view (cleaner HTML) -->
                            <a href="/handle-view-user/<%= user.id %>" class="btn btn-warning">View</a>
                            <form action="/handle-delete-user/<%= user.id %>" method="POST" onsubmit="return confirm('Are you sure to delete this user?');">
                                <button 
                                type="submit"
                                class="btn btn-danger">Delete  </button>
                            </form>                            
                        </div>
                      
                    </td>
                </tr>
                <% }) %>
            </tbody>

        </table>
    </div>
</body>
</html>